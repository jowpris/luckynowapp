<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="club.luckynow.www.luckynow.MainActivity">

    <RelativeLayout
        android:layout_width="396dp"
        android:layout_height="509dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="-28dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="189dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            app:srcCompat="@drawable/luckynow"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="81dp" />

        <Button
            android:id="@+id/pre_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:background="@color/colorPrimary"
            android:paddingHorizontal="@android:dimen/notification_large_icon_height"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingVertical="@android:dimen/notification_large_icon_height"
            android:text="Pre-registro"
            android:textColor="@color/colorPrimaryDark"
            android:textColorLink="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="413dp" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:inputType="textPersonName"
            android:text="Comming Soon"
            android:textAlignment="center"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="318dp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
